{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "typedocOptions": {
    "readme": "README.md",
    "mode": "modules",
    "out": "docs/api",
    "excludePrivate": true,
    "excludeProtected": true,
    "preserveConstEnums": true,
    "module": "commonjs"
  }
}
